spring.application.name=${SPRING_APP_NAME:jobhunter}

#config database
spring.jpa.hibernate.ddl-auto=${DB_DDL_AUTO:update}
spring.datasource.url=${DB_URL}
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=${DB_DRIVER:com.mysql.cj.jdbc.Driver}
spring.jpa.show-sql=${JPA_SHOW_SQL:false}
spring.jpa.properties.hibernate.format_sql=${JPA_FORMAT_SQL:false}
logging.level.org.hibernate.SQL=${HIBERNATE_SQL_LOG_LEVEL:WARN}
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=${HIBERNATE_BIND_LOG_LEVEL:WARN}
logging.level.org.hibernate.orm.query=${HIBERNATE_QUERY_LOG_LEVEL:WARN}
logging.level.org.hibernate=${HIBERNATE_LOG_LEVEL:WARN}

#config jwt
hoidanit.jwt.base64-secret=${JWT_BASE64_SECRET}
hoidanit.jwt.access-token-validity-in-seconds=${JWT_ACCESS_TOKEN_SECONDS}
hoidanit.jwt.refresh-token-validity-in-seconds=${JWT_REFRESH_TOKEN_SECONDS}
hoidanit.jwt.cookie-secure=${JWT_COOKIE_SECURE}
hoidanit.jwt.cookie-samesite=${JWT_COOKIE_SAMESITE}

#config upload file
spring.servlet.multipart.max-file-size=${MAX_FILE_SIZE}
spring.servlet.multipart.max-request-size=${MAX_REQUEST_SIZE}
hoidanit.upload-file.base-uri=${UPLOAD_BASE_URI}

#config pagination
spring.data.web.pageable.one-indexed-parameters=${PAGE_ONE_INDEXED:true}

#config email with Gmail
spring.mail.host=${MAIL_HOST}
spring.mail.port=${MAIL_PORT}
spring.mail.username=${MAIL_USERNAME}
spring.mail.password=${MAIL_PASSWORD}
spring.mail.properties.mail.smtp.auth=${MAIL_SMTP_AUTH}
spring.mail.properties.mail.smtp.starttls.enable=${MAIL_STARTTLS_ENABLE}

#config OAuth2 Google
spring.security.oauth2.client.registration.google.client-id=${GOOGLE_CLIENT_ID}
spring.security.oauth2.client.registration.google.client-secret=${GOOGLE_CLIENT_SECRET}
spring.security.oauth2.client.registration.google.scope=${GOOGLE_OAUTH_SCOPE}
spring.security.oauth2.client.registration.google.redirect-uri=${GOOGLE_REDIRECT_URI}

